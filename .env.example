# Backend Environment Variables
# Copy to .env and fill in values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/kitchen_odyssey?retryWrites=true&w=majority

# JWT secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET=change-me-to-a-random-secret

# CORS allowed origins (comma-separated)
# Note: kitchenodyssey.eastasia.cloudapp.azure.com (HTTP/HTTPS) is always
# allowlisted in code for deployment compatibility.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Node environment
NODE_ENV=development

# Next.js runtime binding
HOSTNAME=0.0.0.0
PORT=3000

# MongoDB connection pooling
# Lower pool sizes for development to avoid hitting Atlas connection limits
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=1
MONGODB_SERVER_SELECTION_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_AUTH=500
RATE_LIMIT_MAX_WRITE=500
RATE_LIMIT_MAX_READ=1000
MAX_REQUEST_BODY_BYTES=1048576

# Image storage (local filesystem)
IMAGE_UPLOAD_DIR=./uploads
IMAGE_PUBLIC_URL_BASE=http://localhost:3000/uploads
IMAGE_MAX_SIZE_BYTES=5242880
IMAGE_ALLOWED_TYPES=image/jpeg,image/png,image/webp
IMAGE_THUMBNAIL_DIR=thumbnails
